<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >



    <android.support.v7.widget.Toolbar
        android:id="@+id/enshrine_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:padding="0dp"
        app:theme="@style/Toolbar" />

    <LinearLayout
        android:id="@+id/enshrine_linear"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:background="@drawable/shape_waterfall_item_"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/enshrine_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:autoLink="all"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/enshrine_imagebutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/collection_delete"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:padding="3dp"
            android:scaleType="centerInside"


            />
    </LinearLayout>


</LinearLayout>
